<Window x:Class="SolarGames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolarGames"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid x:Name="LayoutGrid">
        <Grid x:Name ="UsersGrid" HorizontalAlignment="Left" ShowGridLines ="true" Margin="10,10,0,0" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Grid.Row="0" Content="Строка 0 Столбец 0"  />
            <Button Grid.Column="1" Grid.Row="0" Content="Строка 0 Столбец 1" />
            <Button Grid.Column="2" Grid.Row="0" Content="Строка 2 Столбец 2"  />
        </Grid>
    </Grid>
</Window>

